<?xml version="1.0"?>
<odoo>
	<data>
        <record id="izi_pos_config_form_view" model="ir.ui.view">
            <field name="name">izi.pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <div id="payment_methods" position="after">
                    <!-- Phương thức tt ghi nhận doanh thu -->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_loyal_ids"/>
                            <div class="content-group mt16">
                                <field name="journal_loyal_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <!-- Phương thức tt thẻ tiền được chấp nhận -->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_vm_ids"/>
                            <div class="content-group mt16">
                                <field name="journal_vm_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <!-- Phương thức tt ghi nợ-->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_debt_id"/>
                            <div class="content-group mt16">
                                <field name="journal_debt_id" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    <!-- Phương thức tt thẻ tiền -->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_vm_id"/>
                            <div class="content-group mt16">
                                <field name="journal_vm_id" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    <!--tiennq them phuong thuc dat coc tien va rut tien-->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_deposit_ids"/>
                            <div class="content-group mt16">
                                <field name="journal_deposit_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_deposit_id"/>
                            <div class="content-group mt16">
                                <field name="journal_deposit_id" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_exception_ids"/>
                            <div class="content-group mt16">
                                <field name="journal_exception_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="journal_pay_debt_ids"/>
                            <div class="content-group mt16">
                                <field name="journal_pay_debt_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <!--Chi phí refund-->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="x_charge_refund_id"/>
                            <div class="content-group mt16">
                                <field name="x_charge_refund_id" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    <!--DỊch vụ được sửa giá-->
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="product_edit_price_ids"/>
                            <div class="content-group mt16">
                                <field name="product_edit_price_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
	</data>
</odoo>
